<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_insertarp"
        android:layout_width="226dp"
        android:layout_height="54dp"
        android:layout_marginTop="68dp"
        android:onClick="nuevaProvincia"
        android:text="@string/nueva_provincia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_borrarp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="borrarProvincia"
        android:text="@string/borrar_provincia"
        app:layout_constraintEnd_toEndOf="@+id/bt_insertarp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_insertarp"
        app:layout_constraintTop_toBottomOf="@+id/bt_insertarp" />

    <Button
        android:id="@+id/bt_mostrarCiudades"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Mostrar Ciudades"
        android:onClick="mostrarCiudades"
        app:layout_constraintEnd_toEndOf="@+id/bt_borrarp"
        app:layout_constraintStart_toStartOf="@+id/bt_borrarp"
        app:layout_constraintTop_toBottomOf="@+id/bt_borrarp" />

</androidx.constraintlayout.widget.ConstraintLayout>